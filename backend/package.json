{
  "name": "fueleu-backend",
  "version": "1.0.0",
  "main": "api/index.ts",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--dns-result-order=ipv4first' tsx watch src/infrastructure/server/index.ts",
    "build": "tsc",
    "start": "NODE_OPTIONS='--dns-result-order=ipv4first' node dist/infrastructure/server/index.js",
    "vercel-build": "echo 'Building for Vercel...' && tsc",
    "test": "jest",
    "migrate": "NODE_OPTIONS='--dns-result-order=ipv4first' tsx src/infrastructure/db/migrate.ts",
    "seed": "NODE_OPTIONS='--dns-result-order=ipv4first' tsx src/infrastructure/db/seed.ts",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "ts-jest": "^29.1.1"
  }
}
